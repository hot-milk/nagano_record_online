<div class="container">
	<div class="row">
		<div class="col-xs-3 col-xs-offset-2">
		   <h1>ジャンル一覧</h1>
	    </div>
	    <div class="col-xs-7"><br>
		  <%= link_to '新規登録', '/genres/new', class:"btn btn-default" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<table class="table table-hover">
            <thead>
              <tr class="info">
                <th>ジャンル名</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr class="active">
                  <td> <%= genre.genre_name %></td>
                  <td> <%= link_to "編集", edit_genre_path(genre.id), class: "btn-sm" %>
                  </td>
                  <td> <%= link_to '削除', genre_path(genre.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @genres %>
		</div>
	</div>
</div>