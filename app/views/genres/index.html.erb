<div class="container">
    <div class="row">
        <div class="">
            <h2>ジャンル一覧</h2>
            <%= link_to '新規登録', '/new', class: "" %>

            <table>
                <tr>
                    <th>ジャンルID</th>
                    <th>ジャンル名</th>
                    <th><%#編集%></th>
                    <th><%#削除%></th>
                </tr>
                <%= @genres.each do |genre| %>
                <tr>
                    <td><%= genre.id %></td>
                    <td><%= genre.name %></td>
                    <td>
                        <%= link_to '編集', edit_genre_path, class: "btn-sm btn-success edit_genre_#{genre.id}" %>
                    </td>
                    <td>
                        <%= link_to '削除', genre_path, method: :delete, "data-confirm" => "削除しますか？", class: "btn-sm destroy_genre_#{genre.id}" %>
                    </td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>