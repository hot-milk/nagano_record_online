<div class="container artist_new">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h2>レーベル新規登録</h2>

			<%= form_for(@artist) do |f| %>

			  <div class="field">
			    <%= f.label :artist_name, "レーベル名" %>
			    <%= f.text_field :artist_name,required: true,class: 'form-control' %>
			  </div>

			  <div class="actions pull-right">
			    <%= f.submit "登録",class: 'btn btn-default' %>
			  </div>
			<% end %>
	    </div>
    </div>
</div>