<div class="container">
	<div class="row">
		<div class="col-xs-3 col-xs-offset-2">
		   <h1>レーベル一覧</h1>
	    </div>
	    <div class="col-xs-7"><br>
		  <%= link_to '新規登録', '/labels/new', class:"btn btn-default" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<table class="table table-hover">
            <thead>
              <tr>
                <th>id</th>
                <th>name</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% @labels.each do |label| %>
                <tr>
                  <td> <%= label.id %></td>
                  <td> <%= label.label_name %></td>
                  <td> <%= link_to "編集", edit_label_path(label.id) %>
                  </td>
                  <td> <%= link_to '削除', label_path(label.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
		</div>
	</div>
</div>
