<div class="container review">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2>レビュー内容編集</h2>
			<%= form_for [@product, @review] do |f| %>

			  <div class="field">
			    <%= f.label :review_content, "レビュー内容" %><br>
			    <%= f.text_area :review_content,required: true,class: 'form-control' %>
			  </div>
			  <div class="actions">
			    <%= f.submit "更新", class: 'btn btn-primary' %>
			  </div>

			<% end %>
        </div>
	</div>
</div>