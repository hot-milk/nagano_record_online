<div class="container review">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2>レビュー新規投稿</h2>
			<%= form_for [@product, @review] do |f| %>

			  <div class="field form-group">
			    <%= f.label :review_content, "レビュー内容" %>
			    <%= f.text_area :review_content,required: true, class: 'form-control' %>
			  </div>
			  <div class="actions">
			    <%= f.submit "投稿",class: 'btn btn-default pull-right' %>
			  </div>

			<% end %>
	    </div>
    </div>
</div>