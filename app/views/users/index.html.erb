<div class="container users">
    <div class="row">
        <div class="">
            <h2>ユーザー一覧</h2>
            <table class="table table-hover">
                <thead>
                <tr class="info">
                    <th>ユーザーID</th>
                    <th>名前</th>
                    <th>電話番号</th>
                    <th>Eメール</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <% @users.each do |user| %>
                <tbody>
                <tr class="active">
                    <td><%= user.id %></td>
                    <td><%= user.last_name %><%= user.first_name %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <td>
                        <%= link_to '詳細', user_path(user.id), class: "user_#{user.id}" %>
                    </td>
                    <td>
                        <%= link_to '編集', edit_user_path(user.id), class: "edit_user_#{user.id}" %>
                    </td>
                    <td>
                        <%= link_to '退会', user_path(user.id), method: :delete, "data-confirm" => "削除しますか？", class: "destroy_user_#{user.id}" %>
                    </td>
                </tr>
                </tbody>
                <% end %>
            </table>
        <%= paginate @users %>
        </div>
    </div>
</div>