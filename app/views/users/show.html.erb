<% if current_user.admin? %>
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-left">
				<h2>ユーザー情報</h2>
				<br>
				<%= form_for(@user) do |f| %>
				<h4><姓名></h4>
					<%= @user.last_name %><%= @user.first_name %>
				<br>
				<h4><フリガナ></h4>
					<%= @user.ruby_last_name %><%= @user.ruby_first_name %>
				<br>
				<h4><郵便番号(ハイフンなし)></h4>
					<%= @user.postcode %>
				<br>
				<h4><住所></h4>
					<%= @user.address %>
				<br>
				<h4><電話番号(ハイフンなし)></h4>
					<%= @user.phone %>
				<br>
				<h4><メールアドレス></h4>
					<%= @user.email %>
				<br>
				<h4><パスワード></h4>
					<%= @user.password %>
				<br>
				<br>
				<br>

				<div class="row">
					<%= link_to '編集', edit_user_path(@user), class: "btn-sm  edit_user_#{@user.id}" %>
					<%= link_to '退会', user_path, method: :delete, "data-confirm" => "退会させますか？", class: "btn-sm destroy_user_#{@user.id}" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
<!-- ユーザー側views -->
<% else %>
<div class="container">
	<div class="row">
		<div class="col-lg-12 text-left">
			<h3>マイページ</h3>
			<h4 class="">ユーザー情報</h4>
			<%= form_for(@user) do |f| %>
				<div class="">
					<p>氏名</p><%= @user.last_name %><%= @user.first_name %>
					<p>住所</p><%= @user.address %>
					<p>電話番号</p><%= @user.phone %>
					<p>メール</p><%= @user.email %>
				</div>

				<div class="">
					<%= link_to "個人情報の変更はこちら", edit_user_path(@user), class: "" %>
				</div>
				<div class="">
					<%= link_to '退会', user_path, method: :delete, "data-confirm" => "退会しますか？", class: "btn-sm destroy_user_#{@user.id}" %>
				</div>
			<% end %>

			<h4>購入履歴</h4>
			<div class="row">
				
			</div>
		</div>
	</div>
</div>
<% end %>


