<div class="container">
	<div class="row">
		<div class="col-lg-12 text-left">
			<h2>ユーザー情報</h2>
			<br>
			<%= form_for(@user) do |f| %>
			<h4><姓名></h4>
				<%= @user.last_name %><%= @user.first_name %>
			<br>
			<h4><フリガナ></h4>
				<%= @user.ruby_last_name %><%= @user.ruby_first_name %>
			<br>
			<h4><郵便番号(ハイフンなし)></h4>
				<%= @user.postcode %>
			<br>
			<h4><住所></h4>
				<%= @user.address %>
			<br>
			<h4><電話番号(ハイフンなし)></h4>
				<%= @user.phone %>
			<br>
			<h4><メールアドレス></h4>
				<%= @user.email %>
			<br>
			<h4><パスワード></h4>
				<%= @user.password %>
			<br>
			<br>
			<br>

			<div class="row">
				<%= link_to '編集', edit_user_path(@user), class: "btn-sm  edit_user_#{@user.id}" %>
				<%= link_to '削除', user_path, method: :delete, "data-confirm" => "削除しますか？", class: "btn-sm destroy_user_#{@user.id}" %>
			</div>
			<% end %>
		</div>
	</div>
</div>