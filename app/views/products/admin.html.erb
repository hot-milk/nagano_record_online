<div class="container">
	<div class="row">
		<div class="col-xs-2 col-xs-offset-2">
		   <h2>商品一覧</h2>
	  </div>
	  <div class="col-xs-8"><br>
		  <%= link_to '新規登録', new_product_path, class:"btn btn-default" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<table class="table table-hover">
            <thead>
              <tr class="info">
                <th>商品名</th>
                <th>アーティスト名</th>
                <th>税抜価格</th>
                <th>在庫数</th>
                <th>販売ステータス</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr class="active">
                  <td> <%= product.product_name %></td>
                  <td> <%= product.artist.artist_name %></td>
                  <td>¥<%= product.price %></td>
                  <td> <%= product.stock %></td>
                  <td> <%= product.status %></td>
                  <td> <%= link_to "詳細", product_path(product.id) %>
                  </td>
                  <td> <%= link_to "編集", edit_product_path(product.id) %>
                  </td>
                  <td> <%= link_to '削除', product_path(product.id), method: :delete, "data-confirm" => "削除しますか？" %></td>
                </tr>
              <% end %>
            </tbody>
      </table>
      <%= paginate @products %>
		</div>
	</div>
</div>