<div class="container">
	<div class="row">
		<div class="col-xs-3">
		   <h1>商品一覧</h1>
	    </div>
	    <div class="col-xs-6">
		  <%= link_to '新規登録', new_product_path, class:"btn btn-default" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<table class="table table-hover">
            <thead>
              <tr>
                <th>id</th>
                <th>name</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td> <%= product.id %></td>
                  <td> <%= product.product_name %></td>
                  <td> <%= link_to "編集", edit_product_path(product.id) %>
                  </td>
                  <td> <%= link_to '削除', product_path(product.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
		</div>
	</div>
</div>