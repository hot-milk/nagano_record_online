<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<table class="table table-hover">
	            <thead>
	              <tr>
	                <th>商品名</th>
	                <th>アーティスト名</th>
	                <th>税抜価格</th>
	                <th>在庫数</th>
	                <th>&nbsp;</th>
	                <th>&nbsp;</th>
	              </tr>
	            </thead>
	            <tbody>
	                <tr>
	                  <td> <%= @product.product_name %></td>
	                  <td> <%= @product.artist.artist_name %></td>
	                  <td> ￥<%= @product.price.to_i * 1.08 %></td>
	                  <td> <%= @product.stock %></td>
	                  <td> <%= attachment_image_tag @product, :jacket_image, :fill, 100, 100, format: 'jpeg' %></td>
	                </tr>
	            </tbody>
            </table>
            <h4>この商品のレビュー</h4>
            <%= link_to '新規登録', new_product_review_path(@product.id), class:"btn btn-default" %>
            <% @reviews.each do |review| %>
				<table class="table table-hover">
		            <tbody>
		                <tr>
		                  <td>

		                  	<dt> <%= review.review_content %></dt>
		                  </td>
		                  <td> <%= review.created_at %></td>
		                  <td> <%= link_to "編集", edit_product_review_path(review.product,review.id) %></td>
		                  <td> <%= link_to '削除', product_review_path(review.product,review.id), method: :delete, "data-confirm" => "削除しますか？" %></td>
		                </tr>
		            </tbody>
	            </table>
            <% end %>
		</div>
	</div>
</div>