<div class="container-fluid">
  <div class="row">
    <div class="col-xs-2">
        <%= render '/contacts/list', contact: @contact %>
    </div>
    <div class="col-xs-10">
      <% if @search_products.count > 0 %>
        <h2>検索結果一覧 <small>"<%= @search_products.count %>件" の商品が見つかりました。<small></h2>
      <% else %>
        <h2>お探しの商品は見つかりませんでした。</h2>
      <% end %>
        <% @search_products.each do |product| %>
            <% if product.status == "販売中" %>
              <div class="product_container">
                  <%= link_to product_path(product.id) do %>
                  <%= attachment_image_tag product, :jacket_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" ,size: '100x100' %><br>
                  <%= product.product_name %>
                  <% end %>
                  <br>
                  <%= product.artist.artist_name %>
                  <br>
                  ¥<%= product.price.to_i * BigDecimal("1.08").ceil %>(税込)
              </div>
            <% end %>
        <% end %>
    </div>
    <div class= "row">
      <div class= "col-xs-4 col-xs-offset-4">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>