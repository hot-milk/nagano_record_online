<div class="container-fluid padi">
  <div class="row">
    <div class="col-xs-2">
        <%= render '/contacts/list', contact: @contact, product_ranking: @product_ranking %>

        <%= form_for(@contact) do |f| %>
            <% if @contact.errors.any? %>
            <h3><%= @contact.errors.count %>件名 内容を入力してください</h3>
            <ul>
            <% @contact.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
            <% end %>
        <% end %>
    </div>
    <div class="col-xs-10">
        <% @products.each do |product| %>
            <% if product.status == "販売中" %>
              <div class="product_container">
                  <%= link_to product_path(product.id) do %>
                  <%= attachment_image_tag product, :jacket_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" ,size: '100x100' %><br>
                  <%= product.product_name %>
                  <% end %>
                  <br>
                  <%= product.artist.artist_name %>
                  <br>
                  ¥<%= product.price.to_i * BigDecimal("1.08").ceil %>(税込)
              </div>
            <% end %>
        <% end %>
    </div>
    <div class= "row">
      <div class= "col-xs-4 col-xs-offset-4">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>