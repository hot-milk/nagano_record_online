<div class="container login">
  <div class="row">
    <div class="text-center col-xs-4 col-xs-offset-4">
       <h4>ログイン</h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス",class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "パスワード",class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-default" %>
            <%#= link_to , "user_products" %>
          </div>
          <%#= link_to "新規会員はこちら", "users/sign_up" %>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

